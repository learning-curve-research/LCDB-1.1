Bootstrap: docker
From: ubuntu:latest

%files
    requirements.txt /requirements.txt

%post
    # Update and install necessary packages
    apt-get update && apt-get install -y tree time vim ncdu speedtest-cli build-essential git python3-venv

    # Create a new virtual environment
    python3 -m venv /opt/venv
    
    # Activate the virtual environment
    . /opt/venv/bin/activate
    
    # Install dependencies using pip
    pip install -r /requirements.txt

    # Clean up
    apt-get clean && rm -rf /var/lib/apt/lists/*

    # Now add the script to activate the virtual environment
    echo '. /opt/venv/bin/activate' >> $APPTAINER_ENVIRONMENT
